<div class="row">
  <h1><%= @drugstore.name %> 动态</h1>
</div>
<div class="row">
  <p id="notice"><%= notice %></p>
  <%= link_to '添加', new_e_drugstore_incident_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>标题</th>
        <th>图片</th>
        <th>作者</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @incidents.each do |incident|%>
        <tr>
          <td><%= incident.title %></td>
          <td>
            <img src="<%= incident.image_url%>" width="180" />
          </td>
          <td><%= incident.author %></td>
          <td>
            <%= link_to '删除', e_drugstore_incident_path(incident.e_drugstore.id, incident.id), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @incidents %>

  <%= link_to '返回', e_drugstores_path, class: 'btn btn-info' %>
</div>

