<div class="row">
  <h1><%= @drugstore.name %> 药品管理</h1>
</div>
<div class="row">
  <p id="notice"><%= notice %></p>
  <%= link_to '添加', new_e_drugstore_e_drug_path, class: "btn btn-info" %>
  <hr>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr class="active">
        <th>药品名称</th>
        <th>厂家</th>
        <th>出厂价(￥)</th>
        <th>现价(￥)</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @drugs.each do |drug|%>
        <tr>
          <td><%= drug.name %></td>
          <td><%= drug.manufactory %></td>
          <td><%= drug.ori_price %></td>
          <td><%= drug.price %></td>
          <td>
            <%= link_to '详情', e_drugstore_e_drug_path(drug.e_drugstore.id, drug.id), class: "btn btn-info"%>
            <%= link_to '修改', edit_e_drugstore_e_drug_path(drug.e_drugstore.id, drug.id), class: "btn btn-warning"%>
            <%= link_to '下架', e_drugstore_e_drug_path(drug.e_drugstore.id, drug.id), method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @drugs %>

  <%= link_to '返回', e_drugstores_path, class: 'btn btn-info' %>
</div>

