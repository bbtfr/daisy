<header class="bar bar-header bar-nav">
  <img class="header-image" src="images/adv/health.gif" />
</header>

<ion-content class="has-header" overflow-scroll="true">
  <div class="afterHeight"  ng-if="afterHeight">
  </div>
  <!-- <div ng-class="{beforeHeight: before == 'yes', afterHight: before != 'yes'}"></div> -->
  <div id="health_information" >
    <nav>
      <ul>
        <li ng-repeat="information_type in health_infors.information_types">
          <a href="javascript:;" ng-click="gotoCategory({{information_type.id}})">
            {{ information_type.name }}
          </a>
        </li>
      </ul>
    </nav>

    <section>
      <div class="ads-images" ng-if="hotAds">
        <ion-slide-box on-slide-changed="slideHasChanged($index)" does-continue='true' auto-play='true'>
          <ion-slide ng-repeat="hot_ads in hotAds">
            <div class="box">
              <img class="ads-image" ng-src="{{ hot_ads.image_url }}" alt="广告图片"></img>
              <a class="information-title" ng-href="#/healthInformationDetail?id={{hot_ads.id}}" >{{ hot_ads.name }}</a>
            </div>
          </ion-slide>
        </ion-slide-box>
      </div>
    </section>


    <div class="list" id="{{infor_item.id}}" ng-repeat="infor_item in infor_items | toArray">
      <div ng-class="{true: 'first-category', false: ''}[$index == 0]">
        <div class="category-information" style="">
          <h3 class="category-title">
            <a>{{ infor_item.name }}</a>
          </h3>
          <ul class="category-items">
            <li ng-repeat="children_item in infor_item.children_items | limitTo:3" ng-click="showChildreninfors(infor_item.id, children_item.id)">
              <a href="javascript:;"></a> {{ children_item.name }}
            </li>
          </ul>
        </div>
        <ul class="information-items">
          <li class="information-item" ng-repeat="information in infor_item.latest_informations" ng-class="{true: 'picture-ads', false: 'picture-infors'}[itemWithPicture2(infor_item.name)]">

            <!-- the first two information items just use picture, others just word -->
            <div ng-if="itemWithPicture2(infor_item.name)" style="height: 100%; width: 100%;">
              <a class="image-item" ng-href="#/healthInformationDetail?id={{information.id}}" ng-if="$index <= 1">
                <img ng-src="{{information.image_url}}">
                <p class="info-name">{{information.name}}</p>
              </a>
                <!-- <a class="image-item" ng-href="#/healthInformationDetail?id={{information.id}}">
                  <img ng-src="{{information.image_url}}">
                  <p class="info-name">{{information.name}}</p>
                </a> -->

              <a href="#/healthInformationDetail?id={{information.id}}" ng-if="$index > 1 ">
                {{ information.name }}
              </a>
            </div>

            <!-- the first information item is: picture + word, others just word -->
            <div ng-if="!itemWithPicture2(infor_item.name)" class="information-wrapper">
              <a class="item item-thumbnail-left" ng-if="$index == 0" ng-href="#/healthInformationDetail?id={{information.id}}">
                <img ng-src="{{ information.image_url }}">
                <h2 style="margin-top: 10px;">{{ information.name  }}</h2>
              </a>

              <a href="#/healthInformationDetail?id={{information.id}}" ng-if="$index != 0">
                {{ information.name }}
              </a>
            </div>

          </li>
        </ul>
      </div>
      <div class="load-more" ng-if="infor_item.latest_informations.length > 0" ng-click="loadMore({{infor_item.id}})">
        <a href="javascript:;">查看更多>></a>
      </div>
    </div>

    <section>
      <div class="ad-picture">
        <ul class="information-item">
          <li>
            <img  style="width: 100%;" alt="">
          </li>
          <li>
            <img style="width: 100%;" alt="">
          </li>
        </ul>
      </div>
    </section>

    <section class="last-section">
      <h3>合作赞助联系方式</h3>
      <div class="connect-way">
        <ul class="information-items">
          <li>
            <img src="images/adv/wechat.png" style="width: 100%;" alt="" />
          </li>
          <li>
            <img src="images/adv/qq.png" style="width: 100%;" alt="" />
          </li>
        </ul>
      </div>
    </section>
  </div>
</ion-content>
