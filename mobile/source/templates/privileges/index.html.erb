<%= partial 'subheader',local: { title: "团购优惠"} %>

</nav>
<div class="content" style="bottom:50px;top:100px;">
	<div class="list" drop-down>
		<div ng-repeat="hospital_type in data.data">
			<div class="item item-divider " ng-click="showList($index)" style="color:#828282;font-size:1.4em;">
				<img src="{{hospital_type.image_url}}">
				<i class="ion-chevron-down" style="float:right"></i>
				{{hospital_type.name}}
			</div>
			<div ng-show="ifShow[$index]">
				<div ng-repeat="child in hospital_type.children" drop-down>
					<div class="item" href="#/privileges/hospital_types/{{child.id}}/hospital_charges"  style="color:#828282;" ng-click="getCharges(child.id);showList($index)">
					{{child.name}}
						<i class="ion-chevron-down" style="float:right"></i>
					
					</div>
					<div ng-show="ifShow[$index]">
						<a class="item" href="#/privileges/hospital_types/hospital_charges/all/hospital_onsales" style="padding-left:2.4em;color:#028C14">全部</a>
						<a class="item" ng-repeat="charge in charges[child.id]" href="#/privileges/hospital_types/hospital_charges/{{charge.id}}/hospital_onsales" style="padding-left:2.4em;color:#028C14">
							{{charge.name}}
						</a>

					</div>
				</div>

			</div>
		</div>
	</div>

</div>