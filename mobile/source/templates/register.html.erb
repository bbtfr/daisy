<%= partial 'header', locals: { title: "注册帐号" } %>

<div class="content">
  
  <div class="card">
    <div class="content-padded">
      <form class="register" ng-controller="FormCtrl" ng-submit="submit('/api/sign_up', {account: account}, afterLogin)" name="form">
        <div class="input-wrapper">
          <span class="ionicon ion-ios7-email-outline"></span>
          <input type="text" placeholder="请输入电子邮箱" ng-model="account.email">
        </div>
        <!-- <button class="btn btn-large btn-primary pull-right token">获取验证码</button> -->
        <div class="input-wrapper">
          <span class="ionicon ion-ios7-person-outline"></span>
          <input type="text" placeholder="请输入用户名" ng-model="account.username">
        </div>
        <div class="input-wrapper">
          <span class="ionicon ion-ios7-keypad-outline"></span>
          <input type="password" placeholder="请输入密码" ng-model="account.password">
        </div>
        <button class="btn btn-large btn-primary btn-block">注册帐号</button>
      </form>
      
    </div>
  </div>

  <%= partial 'related' %>

</div>
