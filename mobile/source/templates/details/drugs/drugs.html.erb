  <div class="borderBottom10"></div>
  <div class="shoplist" ng-show="data.drugstores.length">
    <div class="title">
      <h1>商家报价</h1>
    </div>
    <div class="borderBottom1"></div>
    <ul class="store-list">
      <li  ng-repeat="store in data.drugstores">
        <div class="name">
          <h2>{{ store.name }}</h2><span><em>{{ store.price }}元</em></span>
        </div>
        <div class="list">
          <div class="img">
            <img ng-src="{{ store.image_url }}" />
          </div>
          <div class="txt">
            <ul>
              <li><strong>距离：</strong>{{$root.getDistance(store) | number:2}}千米 </li>
              <li><strong>经营许可证：</strong>{{ store.License }}</li>
              <li><strong>电话：</strong>{{ store.telephone }}</li>
              <li><strong>网址：</strong>www.zhuni.com</li>
              <li>
                <form action="" name="form_dp" method="post" class="star">
                  <div class="dp_boxc fr">
                    <input class="fr" type="checkbox" style="margin-top:2px; display:none;" name="InterviewCommentInfoSub[expAuth]" value="0" />
