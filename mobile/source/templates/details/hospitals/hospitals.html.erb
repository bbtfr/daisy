<%= partial 'templates/details/header' %>

<div class="content">

  <%= partial 'templates/details/album' %>
  
  <div class="card">
    <ul class="table-view media">
      <li class="table-view-cell">
        <div class="media-detail">
          <h1>{{data.name}}</h1>
        </div>
      </li>
    </ul>
  </div>

<div class="card">
  <ul class="table-view media"> 
    <li class="table-view-cell">
      <div class="media-detail">
        <h4><span style="color:#838383">特色科室：</span>
          {{data.characteristic_departments}}</h4>
      </div>
    </li>
    <li class="table-view-cell">
      <div class="media-detail">
        <h4 ><span style="color:#838383">医保：</span>{{data.medical_insurance}}</h4>
      </div>
    </li>
    
  </ul>
</div>

<div class="btns-block">
    <a class="btn btn-warning btn-large btn-half-block btn-text-purple" ng-href="{{data.url}}">就诊查询／挂号</a>
  </div>

  <%#= partial 'templates/details/review' %>
<div class="card">
  <ul class="table-view media">
    <li class="table-view-cell">
      <div class="media-detail">
        <h4 >
          <span style="color:#838383">网址：</span>
          <a href="{{data.url}}"> {{data.url}}</a>
        </h4>
      </div>
    </li>
    <li class="table-view-cell">
      <div class="media-detail">
        <h4 class="fix">
          <span  class="pull-left" style="color: #ffd700">★★★★★5分</span>   
          <span class="pull-right">{{data.reviews_count}}人点评</span>
        </h4>
      </div>
      
    </li>
    <li class="table-view-cell">
      <div class="media-detail">
        <ul class="inline border" style="text-align: justify;">
          <li>医院设备完善</li>
          <li>服务质量良好</li>
          <li>医院环境优美</li>
          <li>技术水平高</li>
          <li>技术一般</li>
          <li>环境一般</li>
          <li>服务态度一般</li>
          <li>个方面都不错</li>
        </ul>
      </div>
    </li>
  </ul>
</div>
  
