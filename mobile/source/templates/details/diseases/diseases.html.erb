<%= partial 'templates/details/header' %>

<div class="content">

  <%#= partial 'templates/details/desc', locals: { subtitle: :desc } %>

  <%#= partial 'templates/details/detail', locals: { title: "病因", detail: :etiology } %>
  <%#= partial 'templates/details/detail', locals: { title: "症状", detail: :symptoms} %>
  <%#= partial 'templates/details/detail', locals: { title: "检测", detail: :examination } %>
  <%#= partial 'templates/details/detail', locals: { title: "治疗", detail: :treatment } %>
  <%#= partial 'templates/details/detail', locals: { title: "预防", detail: :prevention } %>
  <%#= partial 'templates/details/detail', locals: { title: "饮食", detail: :diet } %>

  <div class="card">
  <ul class="table-view media">

    <li class="table-view-cell" style="font-size: 1.6em" ng-repeat="type in data.disease_details">
      {{type.title}}
      <span class="pull-right more-box" >
        <a href="#/detail/diseases/diseases/{{data.id}}?detail={{type.id}}" target="_self">查看更多
        </a>
      </span>
    </li>

  </ul>


</div>
